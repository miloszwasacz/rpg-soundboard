<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.gmail.dev.wasacz.rpgsoundboard.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/navigation_home_to_player"
            app:destination="@id/navigation_player"
            app:enterAnim="@anim/nav_default_enter_anim" />
    </fragment>

    <fragment
        android:id="@+id/navigation_player"
        android:name="com.gmail.dev.wasacz.rpgsoundboard.ui.player.PlayerFragment"
        android:label="Player"
        tools:layout="@layout/fragment_refreshable_list" />

    <fragment
        android:id="@+id/navigation_library_presets"
        android:name="com.gmail.dev.wasacz.rpgsoundboard.ui.library.presets.PresetFragment"
        android:label="@string/title_library"
        tools:layout="@layout/list_item_selectable">
        <argument
            android:name="@string/nav_arg_show_fab"
            android:defaultValue="true" />
        <action
            android:id="@+id/navigation_library_presets_to_playlists"
            app:destination="@id/navigation_library_playlists" />
        <action
            android:id="@+id/navigation_library_add_preset"
            app:destination="@id/navigation_dialog_new_preset"
            app:launchSingleTop="true"
            app:restoreState="true" />
        <action
            android:id="@+id/navigation_library_delete_presets"
            app:destination="@id/navigation_dialog_delete_presets"
            app:launchSingleTop="true"
            app:restoreState="true" />
    </fragment>

    <dialog
        android:id="@+id/navigation_dialog_new_preset"
        android:name="com.gmail.dev.wasacz.rpgsoundboard.ui.library.presets.AddPresetFragment"
        tools:layout="@layout/dialog_add_preset">
        <action
            android:id="@+id/navigation_new_preset_to_playlists"
            app:destination="@id/navigation_library_playlists" />
    </dialog>

    <dialog
        android:id="@+id/navigation_dialog_delete_presets"
        android:name="com.gmail.dev.wasacz.rpgsoundboard.ui.library.presets.DeletePresetsFragment" />

    <fragment
        android:id="@+id/navigation_library_playlists"
        android:name="com.gmail.dev.wasacz.rpgsoundboard.ui.library.playlists.PlaylistFragment"
        android:label="{presetName}"
        tools:layout="@layout/list_item_playlist">
        <argument
            android:name="presetId"
            app:argType="long" />
        <argument
            android:name="presetName"
            app:argType="string" />
        <action
            android:id="@+id/navigation_library_playlists_to_songs"
            app:destination="@id/navigation_library_songs" />
    </fragment>

    <fragment
        android:id="@+id/navigation_library_songs"
        android:name="com.gmail.dev.wasacz.rpgsoundboard.ui.library.songs.SongFragment"
        android:label="{playlistName}"
        tools:layout="@layout/list_item_song">
        <argument
            android:name="playlistItem"
            app:argType="com.gmail.dev.wasacz.rpgsoundboard.viewmodel.PlaylistItem" />
        <argument
            android:name="playlistName"
            app:argType="string" />
    </fragment>

    <!--TODO Settings fragment-->
    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.gmail.dev.wasacz.rpgsoundboard.ui.home.HomeFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_home" />
</navigation>